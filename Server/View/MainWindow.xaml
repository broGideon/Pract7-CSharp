<Window x:Class="Server.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock
            Grid.Row="0"
            Text="Добро пожаловать"
            FontSize="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        
        <Separator
            Grid.Row="1"/>
       
        <TextBox
            Name="NameTextBox"
            Grid.Row="2"
            VerticalAlignment="Center"
            materialDesign:HintAssist.Hint="Имя пользователя"
            Style="{StaticResource MaterialDesignOutlinedTextBox}">
            <TextBox.Text>
                <Binding
                    Path="Name"
                    UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <domain:NotEmptyValidationRule
                            ValidatesOnTargetUpdated="True"
                            xmlns:domain="clr-namespace:Server.ViewModel" />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        
        <Button
            Grid.Row="3"
            Content="Создать чат"
            Margin="10, 0">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="Click">
                    <b:CallMethodAction
                        TargetObject="{Binding}"
                        MethodName="CreateChat" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Button>
        
        <Button
            Grid.Row="4"
            Content="Подключиться к чату"
            Margin="10, 0">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="Click">
                    <b:CallMethodAction
                        TargetObject="{Binding}"
                        MethodName="ConnectChat" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Button>
        
        <TextBox
            Name="IpTextBox"
            Grid.Row="5"
            VerticalAlignment="Center"
            Text="{Binding Ip}"
            materialDesign:HintAssist.Hint="IP чата"
            IsInactiveSelectionHighlightEnabled="False"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
    </Grid>
</Window>